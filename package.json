{
  "name": "budgetify-backend",
  "version": "0.1.0",
  "description": "Nest.js is based on Fastify and TypeORM setup",
  "author": {
    "name": "broodd",
    "email": "svyatddev@gmail.com",
    "url": "https://github.com/broodd"
  },
  "private": true,
  "homepage": "https://github.com/broodd/budgetify-backend",
  "repository": {
    "type": "git",
    "url": "https://github.com/broodd/budgetify-backend.git"
  },
  "engines": {
    "node": "16.x",
    "npm": "7.x"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "cross-env NODE_ENV=development nest start",
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:debug": "cross-env NODE_ENV=development nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production node dist/main",
    "start:prod:worker": "cross-env NODE_ENV=production IS_HEROKU_WEB=false IS_HEROKU_WORKER=true node dist/main",
    "typeorm:cli": "ts-node ./node_modules/typeorm/cli",
    "create:migration": "npm run typeorm:cli -- migration:create -d src/database/migrations -n",
    "doc": "npm run doc:generate -- -s",
    "doc:generate": "npx @compodoc/compodoc -p tsconfig.json",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "npm run test -- --watch",
    "test:cov": "npm run test -- --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "husky install"
  },
  "dependencies": {
    "@nestjs/bull": "^0.5.3",
    "@nestjs/common": "^8.0.8",
    "@nestjs/core": "^8.0.8",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/microservices": "^8.4.1",
    "@nestjs/passport": "^8.0.1",
    "@nestjs/platform-fastify": "^8.0.8",
    "@nestjs/swagger": "^5.1.0",
    "@nestjs/terminus": "^8.0.1",
    "@nestjs/throttler": "^2.0.0",
    "@nestjs/typeorm": "^8.0.2",
    "@sendgrid/mail": "^7.6.1",
    "axios": "^0.26.1",
    "bcrypt": "^5.0.1",
    "bull": "^4.8.1",
    "cache-manager": "^3.6.0",
    "cache-manager-redis-store": "^2.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "fastify-compress": "^4.0.1",
    "fastify-helmet": "^7.0.1",
    "fastify-swagger": "^5.1.0",
    "nodemailer": "^6.7.2",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.3.0",
    "typeorm": "^0.3.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-angular": "^13.2.0",
    "@compodoc/compodoc": "^1.1.15",
    "@nestjs/cli": "^8.1.1",
    "@nestjs/schematics": "^8.0.3",
    "@nestjs/testing": "^8.0.8",
    "@types/bcrypt": "^5.0.0",
    "@types/bull": "^3.15.8",
    "@types/cache-manager": "^3.4.2",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.1",
    "@types/nodemailer": "^6.4.4",
    "@types/passport": "^1.0.7",
    "@types/passport-jwt": "^3.0.6",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "chai": "^4.3.4",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "husky": "^7.0.0",
    "jest": "^27.2.3",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "sinon": "^11.1.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.3"
  },
  "jest": {
    "verbose": true,
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1",
      "^test/(.*)$": "<rootDir>/test/$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testEnvironment": "node",
    "testRegex": "/src/.*\\.(test|spec).(ts|tsx|js)$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/src/database/migrations/"
    ],
    "coverageReporters": [
      "json-summary",
      "text"
    ]
  },
  "compodoc": {
    "open": true,
    "hideGenerator": true,
    "output": "./public",
    "tsconfig": "./tsconfig.json",
    "unitTestCoverage": "./coverage/coverage-summary.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run lint -- --cache",
      "commit-msg": "commitlint -c .commitlintrc.json -E HUSKY_GIT_PARAMS"
    }
  }
}
